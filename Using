import sqlite3
conn = sqlite3.connect("grades.db")
c = conn.cursor()
c.execute("CREATE TABLE IF NOT EXISTS students (name TEXT, marks REAL, grade TEXT)")
name = input("Name: ")
marks = float(input("Marks: "))
grade = 'A' if marks >= 90 else 'B' if marks >= 80 else 'C' if marks >= 70 else 'D' if marks >= 60 else 'F'
c.execute("INSERT INTO students VALUES (?, ?, ?)", (name, marks, grade))
conn.commit()
conn.close()
