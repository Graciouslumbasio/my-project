from flask import Flask, request, jsonify
app = Flask(__name__)

@app.route('/grade', methods=['POST'])
def grade():
    data = request.json
    marks = data['marks']
    grade = 'A' if marks >= 90 else 'B' if marks >= 80 else 'C' if marks >= 70 else 'D' if marks >= 60 else 'F'
    return jsonify({"grade": grade})

if __name__ == '__main__':
    app.run(debug=True)
