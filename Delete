def delete_student(name_to_delete):
    students = []

    # Read existing data
    with open("student_grades.csv", "r") as file:
        reader = csv.reader(file)
        for row in reader:
            if row[0] != name_to_delete:  # Keep all except the one to delete
                students.append(row)

    # Write updated data back to CSV
    with open("student_grades.csv", "w", newline="") as file:
        writer = csv.writer(file)
        writer.writerows(students)

    print(f"Record for '{name_to_delete}' has been deleted (if it existed).")
